#! /usr/local/bin/node
var spawn = require('child_process').spawn;
var gotoGreen = require('./src/getGreen');

if (process.argv.length !== 3) {
	console.log('ERROR! One argument is required');
	console.log('usage: newBranch <newBranchName>');
	process.exit(1);
}

var newBranchName = process.argv[2];

gotoGreen(function (commits) {
	localUpdate = spawn(__dirname + '/bin/local-update.sh', [newBranchName, commits.appsdk.commit, commits.appCatalog.commit, commits.alm.commit]);

	localUpdate.stdout.on('data', function (data) {
		process.stdout.write(data);
	});

	localUpdate.stderr.on('data', function (data) {
		process.stdout.write('stderr: ' + data);
	});

	localUpdate.on('close', function (code) {
		process.stdout.write('child process exited with code ' + code);
	});
});